filename='/home/username/playlists.txt'
cmd='mplayer'
cmdargs='-really-quiet -msgcolor'
if [[ -f $filename ]]
then
	echo "* Using $filename"
else
	echo "* Could not find $filename, please make sure it exists"
	exit 1
fi
if [[ -x $cmd ]]
then
	echo "* Using $cmd to play the media"
else
	echo "* Could not execute $cmd, please make sure you have $cmd installed"
	exit 1
fi
if [[ -n $1 ]]
then
	if [[ "$1" == "rand" ]]
	then
		lines=`grep -c --regexp=.* $filename`
		num=`expr $RANDOM % $lines + 1`
		line=`sed -n ${num}p $filename`
		echo "* Randomly picked $line"
		$cmd $cmdargs "$line"
	else
		echo "* Searching for $1"
		$cmd $cmdargs `grep $1 $filename`
	fi
else
	echo "* Displaying all streams"
	cat $filename
fi
